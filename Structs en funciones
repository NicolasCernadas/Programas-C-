void carganombre(alumnado  x[]){
     printf("Ingresa el nombre del alumno: ");
     scanf("%s",x[0].nombre);
     fflush(stdin);
     printf("Ingresa el apellido del alumno: ");
     scanf("%s",x[0].apellido);
     fflush(stdin);
     x[0].nombrecompleto = strcat(x[0].apellido, x[0].nombre);
     strupr(x[0].nombrecompleto);
     printf("Nombre completo: %s",x[0].nombrecompleto);
}
