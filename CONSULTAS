//Ingresar un entero positivo N desde teclado, construir una función para validar el número, generar un array de N reales, con una función y carga aleatoria y otra para emitirlo.
//Como se haria para crear un array en una funcion y volverlo a llamar afuera con punteros (error 'invalid conversion from int to int*)
# include <stdio.h>
# include <stdlib.h>

int cant_elem();
int  crea_array(int * o, int m);
void emitir_array(int * a,int b);
void carga_aleatoria(int * x, int y);

int main(){
     int *p;
     int elem;

     elem = cant_elem();
     p = crea_array(elem);
     carga_aleatoria(p, elem);

    return 0;
}

int cant_elem() {
    int N;
    printf("Ingresa la cantidad de elementos que va a tener el array:\n");
    scanf("%d", &N);
    return N;
}

int crea_array(int m) {
     int * o;
     o = (int*)malloc(m*sizeof(int));
     return o;
}


void emitir_array(int * a,int b) {
     for (int i=0; i<b ; i++) {
          printf("%d |", *(a+i));
     }
}


void carga_aleatoria(int * x, int y) {
     for (int i=0; i<y; i++) {
          *(x+i) = rand () % 11 + 20;
    }
    emitir_array(x, y);
}
