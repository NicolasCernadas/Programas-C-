#include<iostream>
#include<time.h>
#include <stdio.h>

int main (){
    float incremento,salariototal,salario;


    printf("Ingresa tu salario: ");
    scanf("%f",&salario);
    fflush(stdin);

    if (salario < 18000){
        incremento=salario*0.12;
        salariototal=incremento + salario;
        printf("Su incremento salarial es: %.2f\nSu salario final: %.2f",incremento,salariototal);
    }
    else if (18000 <= salario && salario <= 30000){
        incremento=salario*0.08;
        salariototal=incremento + salario;
        printf("Su incremento salarial es: %.2f\nSu salario final: %.2f",incremento,salariototal);
    }
    else if (30000 < salario && salario <=50000){
        incremento=salario*0.07;
        salariototal=incremento + salario;
        printf("Su incremento salarial es: %.2f\nSu salario final: %.2f",incremento,salariototal);
    }
    else if (50000 < salario){
        incremento=salario*0.06;
        salariototal=incremento + salario;
        printf("Su incremento salarial es: %.2f\nSu salario final: %.2f",incremento,salariototal);
    }


    return 0;
}
