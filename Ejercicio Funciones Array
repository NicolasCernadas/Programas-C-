#include<stdio.h>

//Declaro las funciones para el main
void paresimpares(int o[]);//88
void maxarray(int q[]);//70
void promarray(int z[],float sum); //52
void minarray(int y[]); //40
int sumaelem(int x[]);//29


//Funcion principal
int main(){
    int suma, array1[10];

    printf("Anda ingresandolos uno por uno.\n");
    for (int i=0;i<10;i++){
        printf("%d%c elemento: ",i+1,167);
        scanf("%d",&array1[i]);
    }

    suma = sumaelem(array1);
    minarray(array1);
    promarray(array1, suma);
    maxarray(array1);
    paresimpares(array1);

return 0;
}

//Creando funciones
int sumaelem(int x[]){
    int suma=0;
    for (int i=0;i<10;i++){
        suma +=x[i];
    }
    printf("La suma de los elementos es: %d\n", suma);

    return suma;
}

void minarray(int y[]){
    int minimo=0;

    minimo = y[0];
    for (int i=0;i<10;i++){
        if (minimo > y[i]){
            minimo = y[i];
        }
    }
    printf("El elemento minimo es: %d\n", minimo);
}

void promarray(int z[],float sum){
    float prom;
    int aux[10], flag=0;

    prom=((sum)/10);
    printf("El promedio de elementos es: %.2f\n", prom);
    for (int i=0; i<10; i++){
        if (z[i]>prom){
            aux[flag] = z[i];
            flag++;
        }
    }
    printf("Los numeros que superan el promedio son: ");
    for (int i=0;i<flag;i++){
        printf("'%d' ",aux[i]);
    }
}

void maxarray(int q[]){
    int maximo, flag=0;

    maximo = q[0];
    for (int i=0; i<10; i++){
        if (maximo < q[i]){
            maximo = q[i];
            flag=1;
        }
        else if (maximo == q[i]){
            flag++;
        }
    }
    printf("\nEl elemento maximo es: %d\n", maximo);
    printf("El elemento aparecio %d veces\n", flag);

}

void paresimpares(int o[]){
    int pares[10], impares[10],flagpar=0, flagimpar=0;

    for (int i=0; i<10; i++){
        if ((o[i]%2)==0){
            pares[flagpar] = o[i];
            flagpar++;
        }
        else {
            printf("Celda[%d], valor = '%d'\n",i ,o[i]);
        }
    }

    printf("Los elementos pares son:\n");
    for (int a=0; a<flagpar; a++){
        printf("'%d'",pares[a]);
    }
}
