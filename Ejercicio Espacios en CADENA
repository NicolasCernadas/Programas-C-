//Recuento de espacios usados en una cadena:
#include<iostream>
#include<time.h>
#include <stdio.h>

int main (){
    char variable[100];
    int espacios=0;

    printf("Ingresa una oracion: ");
    fflush(stdin);
    gets(variable);

    for (int i=0; variable[i]!=0; i++){
        printf("Caracter: %c\n",variable[i]);
        espacios++;
    }

    printf("Total de espacios del array usados: %i",espacios);

    return 0;
}
